	keywords = {isohydry, P-V curve, TLP, water relations},
	pages = {1500--1511},
	file = {Accepted Version:C\:\\Users\\Albus Severus\\Zotero\\storage\\I4KI7MEW\\Farrell et al. - 2017 - Does the turgor loss point characterize drought re.pdf:application/pdf;Snapshot:C\:\\Users\\Albus Severus\\Zotero\\storage\\SSM3MSLK\\pce.html:text/html}
