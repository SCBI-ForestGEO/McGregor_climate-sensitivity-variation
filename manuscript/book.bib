}

@article{dai_climate_2018,
	title = {Climate {Change} and {Drought}: a {Precipitation} and {Evaporation} {Perspective}},
	volume = {4},
	issn = {2198-6061},
	shorttitle = {Climate {Change} and {Drought}},
