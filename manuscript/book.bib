	number = {2},
	urldate = {2020-07-23},
	journal = {Ecology},
	author = {Bartlett, M. K. and Zhang, Y. and Yang, J. and Kreidler, N. and Sun, S.-W. and Lin, L. and Hu, Y.-H. and Cao, K.-F. and Sack, L.},
